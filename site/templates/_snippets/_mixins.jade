mixin openGraph( $title, $url, $description )
	meta(name='application-name', content=title)
	meta(property='og:title', content=title)
	meta(property='og:type', content='website')
	meta(property='og:url', content=url)
	meta(property='og:image', content='/static/gfx/meta/og_share.jpg' + cachebust)
	meta(property='og:description', content=description)

mixin twitterMeta(title,url,description)
	meta(name='twitter:card', content='summary')
	meta(name='twitter:url', content=url)
	meta(name='twitter:title', content=title)
	meta(name='twitter:image', content='/static/gfx/meta/og_share.jpg' + cachebust)
	meta(name='twitter:description', content=description)

